<html>
  <head>
    <title>Doctors Office</title>
  </head>
<body>
    <h1>Welcome to the Doctor's Office</h1>

    <p>Add the doctor:</p>

    <form action="/doctors" method="post">
        <label for="name">Doctor name:</label>
        <input id="name" name="name" type="text">
        <label for="specialty">Doctor specialty:</label>
        <input id="specialty" name="specialty" type="text">
        <button type="submit">Find doctor</button>
    </form>

    {% if doctors is not empty %}
        <p>Here are all of the doctors:</p>
        <ul>
            {% for doctor in doctors %}
                <li><a href="/doctors/{{ doctor.getId }}">{{ doctor.getName }}</a> specializing in {{ doctor.getSpecialty }}</li>
            {% endfor %}
        </ul>
    {% else %}
      <p>There are no doctors yet!</p>
    {% endif %}

</body>
</html>
